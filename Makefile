	@echo "      /::::::\\    \\            /::::::\\    \\            /:::::|   |        "
	@echo "     /:::/\\:::\\    \\          /:::/\\:::\\    \\          /::::::|   |        "
	@echo "    /:::/__\\:::\\    \\        /:::/__\\:::\\    \\        /:::/|::|   |        "
	@echo "   /::::\\   \\:::\\    \\       \\:::\\   \\:::\\    \\      /:::/ |::|   |        "
	@echo "  /::::::\\   \\:::\\    \\    ___\\:::\\   \\:::\\    \\    /:::/  |::|___|______  "
	@echo " /:::/\\:::\\   \\:::\\    \\  /\\   \\:::\\   \\:::\\    \\  /:::/   |::::::::\\    \\ "
	@echo "/:::/  \\:::\\   \\:::\\____\\/::\\   \\:::\\   \\:::\\____\\/:::/    |:::::::::\\____\\"
	@echo "\\::/    \\:::\\  /:::/    /\\:::\\   \\:::\\   \\::/    /\\::/    / ~~~~~/:::/    /"
	@echo " \\/____/ \\:::\\/:::/    /  \\:::\\   \\:::\\   \\/____/  \\/____/      /:::/    / "
	@echo "          \\::::::/    /    \\:::\\   \\:::\\    \\                  /:::/    /  "
