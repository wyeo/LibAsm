SRC = ft_bzero.s \
	  ft_strcat.s \
	  ft_strdup.s \
	  ft_cat.s \
	  ft_puts.s \
	  ft_putchar.s \
	  ft_isalpha.s \
	  ft_isdigit.s \
	  ft_isprint.s \
	  ft_isascii.s \
	  ft_isalnum.s \
	  ft_isspace.s \
	  ft_toupper.s \
	  ft_tolower.s \
	  ft_memcpy.s \
	  ft_memset.s \
	  ft_strlen.s \
	  ft_strcpy.s \
	  ft_streq.s \
	  ft_strcmp.s \
	  ft_strchr.s \
	  ft_exit.s
OBJ = $(SRC:%.s=%.o)
NAME = libfts.a

all: $(NAME)

$(NAME): $(OBJ)
	@ar rc $(NAME) $(OBJ)
	@ranlib $(NAME)
	@echo "          _____                    _____                    _____          "
	@echo "         /\\    \\                  /\\    \\                  /\\    \\         "
	@echo "        /::\\    \\                /::\\    \\                /::\\____\\        "
